@page
@model WebApp.Pages.GameStates.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GameState[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameState[0].BoardString)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameState[0].BoardWidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameState[0].PlayerOneMove)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameState[0].GameLost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameState[0].GameWon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameState[0].GameTied)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameState[0].VsAI)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.GameState) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoardString)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoardWidth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerOneMove)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameLost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameWon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameTied)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VsAI)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.GameStateId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.GameStateId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.GameStateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
