@page
@model WebApp.Pages.GameStates.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>GameState</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GameState.GameStateId" />
            <div class="form-group">
                <label asp-for="GameState.Name" class="control-label"></label>
                <input asp-for="GameState.Name" class="form-control" />
                <span asp-validation-for="GameState.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameState.BoardString" class="control-label"></label>
                <input asp-for="GameState.BoardString" class="form-control" />
                <span asp-validation-for="GameState.BoardString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameState.BoardWidth" class="control-label"></label>
                <input asp-for="GameState.BoardWidth" class="form-control" />
                <span asp-validation-for="GameState.BoardWidth" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GameState.PlayerOneMove" /> @Html.DisplayNameFor(model => model.GameState.PlayerOneMove)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GameState.GameLost" /> @Html.DisplayNameFor(model => model.GameState.GameLost)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GameState.GameWon" /> @Html.DisplayNameFor(model => model.GameState.GameWon)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GameState.GameTied" /> @Html.DisplayNameFor(model => model.GameState.GameTied)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="GameState.VsAI" /> @Html.DisplayNameFor(model => model.GameState.VsAI)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
